<h3>{{viewTitle}}</h3>

<form action="/cadastro" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{cadastro._id}}">
        <div class="form-group">
            <label >Name</label>
            <input type="text" class="form-control" name = "nome" placeholder="Nome" value="{{cadastro.nome}}">
            <div class="text-danger">
                {{cadastro.nomeError}}
            </div>
        </div>
        <div class="form-group">
            <label >Email</label>
            <input type="text" class="form-control" name = "email" placeholder="Email" value="{{cadastro.email}}">
              <div class="text-danger">
                {{cadastro.emailError}}
            </div>
        </div>
       <div class="form-row">
            <div class="form-group col-md-6">
                <label >Telefone</label>
                <input type="text" class="form-control" name="telefone" placeholder="Telefone" value="{{cadastro.telefone}}">
                <div class="text-danger">
                {{cadastro.telefoneError}}
            </div>
            
        </div>
        </div>
           <div class="form-group">
               <button type = "submit" class="btn btn-info"> <i class="fa fa-database"></i> Enviar</button>
               <a href="/cadastro/list" class="btn btn-secondary"><i class="fa fa-list-alt"></i> Ver todos</a>
           </div> 
</form>